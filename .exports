#!/bin/bash

export EDITOR=/usr/bin/vim;

export HISTSIZE=5000000000;
export HISTFILESIZE=$HISTSIZE;
export HISTCONTROL=ignoredups;

export LANG="en_US.UTF-8";
export LC_ALL=$LANG;

export NVM_DIR=$HOME/.nvm

export GOROOT=$HOME/code/go/go
export GOPATH=$HOME/code/go/golibs
export GOBIN=$GOROOT/bin
export PATH=$GOBIN:$PATH
export GO111MODULE=on

# cargo
export PATH=$HOME/.cargo/bin:$PATH

# java
export PATH=/usr/libexec:$PATH

# casks
export PATH=/usr/local/Cellar:/usr/local/Caskroom:$PATH

# google-cloud-sdk
export PATH=/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/bin:$PATH

export KUBECONFIG=$HOME/.kube/config
export JAVA_HOME=/Library/Java/JavaVirtualMachines/openjdk-14.0.1.jdk/Contents/Home
export PATH=/usr/local/opt/openjdk/bin:$PATH

# openssl
export PATH=/usr/local/opt/openssl@3/bin:$PATH

# couchbase binaries
export PATH=/Applications/Couchbase\ Server.app/Contents/Resources/couchbase-core/bin:$HOME/.cargo/bin:$PATH

# vlang
export PATH=$HOME/code/vlang/v:$PATH

# GKE authentication
export USE_GKE_GCLOUD_AUTH_PLUGIN=true

# krew
export PATH="${PATH}:${HOME}/.krew/bin"
